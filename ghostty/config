theme = light:Atom One Light,dark:Terafox

background-blur-radius = 40
background-opacity = 0.84

window-colorspace = display-p3
window-padding-x = 4
window-padding-y = 4,2
window-padding-balance = true
window-padding-color = background

# behaviour
mouse-hide-while-typing = true
copy-on-select = clipboard

macos-titlebar-style = hidden

# keybinds
keybind = global:super+grave_accent=toggle_quick_terminal
keybind = global:super+d=new_split:right
keybind = global:super+shift+d=new_split:down

#
# MacOS / Linux alignments
#
# resizing
keybind = super+ctrl+shift+arrow_down=unbind
keybind = super+ctrl+shift+arrow_left=unbind
keybind = super+ctrl+shift+arrow_right=unbind
keybind = super+ctrl+shift+arrow_up=unbind
#
keybind = super+ctrl+arrow_down=resize_split:down,64
keybind = super+ctrl+arrow_left=resize_split:left,64
keybind = super+ctrl+arrow_right=resize_split:right,64
keybind = super+ctrl+arrow_up=resize_split:up,64
#
# fullscreen
keybind = ctrl+enter=unbind
keybind = ctrl+shift+enter=unbind
#
keybind = super+enter=toggle_fullscreen
keybind = super+shift+enter=toggle_split_zoom
#
# navigation
keybind = ctrl+bracket_left=unbind
keybind = ctrl+bracket_right=unbind
#
keybind = super+bracket_left=goto_split:previous
keybind = super+bracket_right=goto_split:next

quick-terminal-position = right
